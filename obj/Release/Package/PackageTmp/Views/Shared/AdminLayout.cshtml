<script>
    var baseUrl = '@Url.Content("~/")';
    var handleDelete = (btnClass, action, controller, confirmString) => {
        $(document).ready(() => {
            $(document).on("click", btnClass, (e) => {
                e.preventDefault();
                var row = $(e.target).closest('tr');
                var loading = row.find(".loading");
                loading.show();
                var id = $(e.target).data("id");
                var check = confirm(confirmString);

                if (check) {
                    $.ajax({
                        type: "POST",
                        url: `${baseUrl}${controller}/${action}`,
                        data: JSON.stringify({ id: id }),
                        dataType: "json",
                        contentType: "application/json",
                        success: (res) => {
                            loading.hide();
                            if (res.status === true) {
                                row.remove();
                                toastr.success("Xóa thành công!");
                            } else {
                                toastr.error(res.error);
                            }
                        },
                        error: (res) => {
                            loading.hide();
                            toastr.error(res.error);
                        }
                    });
                }
            });
        });
    }
    handleDelete('.deleteBtn', 'HandleDelete', 'SanPhams', 'Bạn có chắc chắn muốn xóa sản phẩm này không?');
    handleDelete('.deleteOrder', 'HandleDelete', 'DonHangs', 'Bạn có chắc chắn muốn xóa đơn hàng này không?');
    handleDelete('.deleteClient', 'handleDelete', 'KhachHangs', 'Bạn có chắc chắn muốn xóa khách hàng này không?');
</script>
@RenderSection("scripts", required: false)